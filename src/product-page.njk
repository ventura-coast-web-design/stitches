---
layout: base.njk
title: "Solspun Threads Products"
description: "Sewing Kits for Beginners and Professionals"
pagination:
  data: products.products
  alias: product
  size: 1
permalink: product/{{product.url}}/index.html
---

{% block content %}
    <section class="single-product">
        <div class="inner">
            <div class="single-product-image">
                <div class="frame frame--1-by-1">
                    <img src="{{ "/" | url }}{{ product.image }}" alt="{{ product.credits }}">
                </div>
            </div>
            <div class="single-product-content">
                <h1 class="title">{{ product.name }}</h1>
                <p class="price">{{ product.currency }}{{ product.price }}</p>
                <p class="desc">{{ product.description }}</p>
                <button class="button snipcart-add-item"
                  data-item-id="{{ product.id }}"
                  data-item-price="{{ product.price }}"
                  data-item-url="{{ product.url }}"
                  data-item-description="{{ product.description }}"
                  data-item-image="{{ "/" | url }}{{ product.image }}"
                  data-item-name="{{ product.name }}">
                  Add to Cart
                </button>
            </div>
        </div>
    </section>
{% endblock %}